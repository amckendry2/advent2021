#include <string>
#include <fstream>
#include <vector>
#include <iostream>
using namespace std;

int part1(vector<int> vals){
    int lastVal = 0;
    int largerCount = 0;
    for(int val : vals){
	if(lastVal != 0 && val > lastVal)
	    largerCount++;
	lastVal = val;
    }
    cout << largerCount << endl;
}

int part2(vector<int> vals){
    int count = 0;
    for(auto it = vals.begin(); it < vals.end() - 3; it++)
	count += (int)*(it + 3) > *it;
    cout << count << endl;
}

int main(int argc, char* argv[]){    
    int v;
    vector<int> vals;
    ifstream input{argv[2]};
    while(input >> v)
	vals.push_back(v);
    cout << part1(vals) << endl;
    cout << part2(vals) << endl;
    return 0;
}
