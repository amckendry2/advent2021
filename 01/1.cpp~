}


int main(int argc, char* argv[]){
    if(argc < 3){
	cout << "args: [1/2] [input data path]"
    }
    if(argv[1] == "1")
	part1(argv[2]);
    if(argv[2] == "2")
	part2(argv[2]);
    return 0;
    
}
