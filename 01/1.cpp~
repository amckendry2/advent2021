#include <string>
#include <fstream>
#include <iostream>
using namespace std;

void part1(string inputPath){
    ifstream input{argv[1]};
    int lastVal = 0;
    int largerCount = 0;
    string line;
    while(getline(input, line)){
	int val = stoi(line);
	if(lastVal != 0 && val > lastVal)
	    largerCount++;
	lastVal = val;
    }
    cout << largerCount << endl;
}

